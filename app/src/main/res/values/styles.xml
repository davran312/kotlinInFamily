<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="CustomTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="android:titleTextStyle">@style/CustomTheme.Text</item>
        <item name="android:actionBarStyle">@color/colorLightBlue</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>
    <style name="CustomTheme.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="android:titleTextStyle">@style/CustomTheme.Text</item>
        <item name ="android:titleTextColor" tools:targetApi="m">@color/white</item>
        <item name="android:actionBarStyle">@color/colorLightBlue</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>




    <style name="infamily" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textSize">
            36sp
        </item>
        <item name="android:background">@color/colorLightBlue</item>
        <item name="android:titleTextStyle">@color/white</item>
        <item name="android:textColor">
            #000000
        </item>
    </style>

    <style name="customTextColor" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--Dosya values-->
    <style name="subtitlesInDocuments">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="submitButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/dosya_rectangle_blue</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">17dp</item>
        <item name="android:paddingEnd">17dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>



    <style name="CustomTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CustomTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="imagesInDocuments">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:background">@drawable/dosya_rectangle_blue</item>
        <item name="android:padding">5dp </item>
    </style>
    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">27dp</item>
        <item name="android:layout_marginStart">27dp</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/space_between_medspravka_title_and_description</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/text_info</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>
    <style name="TitleImageIconStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/distance_between_logo_title</item>
        <item name="android:layout_marginTop">25sp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/family</item>
    </style>
    <style name="RectangleFrameTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/side_margin_for_every_frame</item>
        <item name="android:layout_marginStart">@dimen/side_margin_for_every_frame</item>
        <item name="android:background">@drawable/dosya_rectangle</item>
    </style>

    <style name="ShadowRectangleFrameTextStyle">
        <item name = "layout">@layout/item_shadow_button</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_weight">1</item>
    </style>
</resources>

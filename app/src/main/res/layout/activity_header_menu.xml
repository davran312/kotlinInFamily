<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:paddingTop="70dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/main_family" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/primaryColor"
        android:gravity="center"
        android:text="@string/main_menu"
        android:textColor="@color/white"
        android:textSize="@dimen/size_25"
        android:textStyle="bold" />

    <LinearLayout
    android:padding="@dimen/size_10"

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">



    <Button
        android:id="@+id/button1"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/size_10"
        android:text="@string/category1"
        android:background="@drawable/dosya_rectangle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_80"
        android:paddingLeft="@dimen/size_3" />
    <Button
        android:id="@+id/button2"
        android:layout_marginTop="@dimen/size_15"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/size_30"
        android:layout_marginLeft="@dimen/size_30"
        android:text="@string/category2"
        android:background="@drawable/dosya_rectangle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_80" />
    <Button
        android:paddingLeft="@dimen/size_3"
        android:paddingRight="@dimen/size_3"
        android:id="@+id/button3"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/size_15"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:text="@string/category3"
        android:background="@drawable/dosya_rectangle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_80" />
</LinearLayout>


</LinearLayout>

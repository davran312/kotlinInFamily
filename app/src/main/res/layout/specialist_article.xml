<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_20"
            android:layout_marginTop="@dimen/size_20"
            android:text="Wiliam Snoe"
            android:textColor="@color/colorBlack"
            android:textSize="21sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/specialistLocation"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/size_30"
                android:clickable="true"
                android:onClick="maps"
                android:src="@drawable/ic_baseline_location_on_24px" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:src="@drawable/default_profile_image" />

            <ImageView
                android:id="@+id/phone"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_30"
                android:clickable="true"
                android:src="@drawable/ic_baseline_phone_24px" />
        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_1"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"
            android:background="@color/colorSilver" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/tw_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/size_15" />

        <TextView
            android:id="@+id/tw_descrption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/size_15" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_1"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"
            android:background="@color/colorSilver" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:text="@string/contacts"
                android:textColor="@color/primaryColorDarker"
                android:textSize="@dimen/size_20"
                android:textStyle="bold" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/tw_contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_15" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:text="@string/address"
                android:textColor="@color/primaryColorDarker"
                android:textSize="@dimen/size_20"
                android:textStyle="bold" />
            <TextView
                android:textAlignment="center"
                android:id="@+id/tw_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_15"

                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:text="@string/e_mail_text"
                android:textColor="@color/primaryColorDarker"
                android:textSize="@dimen/size_20"
                android:textStyle="bold" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/tw_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_text"
                android:textSize="@dimen/size_15" />



        </LinearLayout>
</android.support.v4.widget.NestedScrollView>



    </LinearLayout>



</LinearLayout>




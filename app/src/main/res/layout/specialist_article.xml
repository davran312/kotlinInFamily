<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/size_8">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="205dp"
        app:srcCompat="@drawable/contact_phone"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dp" />

    <TextView
        android:paddingLeft="15dp"

        android:id="@+id/tw_phone"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="212dp"
        android:layout_toStartOf="@+id/img_photo"
        android:text="0709123123"
        android:textColor="@color/colorBlack"
        android:layout_toLeftOf="@+id/img_photo" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="174dp"
        android:orientation="horizontal"
        android:padding="@dimen/size_8">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="49dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView3"
            android:layout_marginBottom="198dp"
            app:srcCompat="@drawable/location" />

        <TextView
            android:id="@+id/tw_adress"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_alignLeft="@+id/tw_schedule"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tw_schedule"
            android:layout_marginBottom="206dp"
            android:paddingLeft="@dimen/size_14"
            android:text="ул. Академика Королева, 12"
            android:textColor="@color/colorBlack" />


    </LinearLayout>

    <TextView
        android:id="@+id/tw_schedule"
        android:layout_width="273dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="-137dp"
        android:text="Ежедневно в 15:45-16:35"
        android:textColor="@color/colorBlack" />




    <TextView
        android:id="@+id/tw_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:text="Елена Малышева"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size_20" />

    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/ellipse"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tw_description"
        android:layout_width="273dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tw_adress"
        android:layout_marginBottom="85dp"
        android:text="Смотрите ежедневно после обеда!"
        android:textColor="@color/colorBlack"
        android:layout_alignLeft="@+id/tw_adress" />



    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="47dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginBottom="137dp"
        app:srcCompat="@drawable/description"
        android:layout_alignLeft="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="53dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginBottom="73dp"
        app:srcCompat="@drawable/schedule"
        android:layout_alignLeft="@+id/imageView3" />

</RelativeLayout>
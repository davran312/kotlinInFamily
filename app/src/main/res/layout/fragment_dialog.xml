<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"

    android:minWidth="1000dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/image_photo"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Документ:"
        android:textSize="@dimen/size_25" />
    <ImageView
        android:id="@+id/image_photo"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:background="#DCDCDC"
        android:src="@drawable/camera" />


    <TextView
        android:id="@+id/description_of_document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/image_photo"
        android:textSize="@dimen/size_20"
        android:layout_marginTop="12dp"
        tools:text="Медицинская справка" />

    <TextView
        android:id="@+id/submit_photo"
        style="@style/submitButton"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_below="@+id/description_of_document"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="@string/result_submit_text" />


</RelativeLayout>
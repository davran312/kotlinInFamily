<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/ShadowRectangleFrameTextStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/side_margin_for_every_frame"
    android:layout_marginStart="@dimen/side_margin_for_every_frame"
    android:layout_marginTop="10dp"
    android:background="@android:color/transparent"
    android:elevation="@dimen/size_10"
    card_view:cardElevation="@dimen/size_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_of_article"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            tools:src="@drawable/family_for_category" />

        <TextView
            android:id="@+id/article_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_in_rectangle"
            android:layout_marginRight="@dimen/margin_in_rectangle"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/big_text_size"
            tools:text="Часто задаваемые вопросы" />
        <TextView
            android:id="@+id/article_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_in_rectangle"
            android:layout_marginRight="@dimen/margin_in_rectangle"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            tools:text = "fefw fef f"
            android:textColor="@color/content_of_article_color"/>

    </LinearLayout>

</android.support.v7.widget.CardView>